@model LPFactory.Data.EstructuraFaseOperacion

@{
    ViewData["Title"] = "Borrar";
}

<h3>¿Está seguro de borrar?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.EstructuraFase)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EstructuraFase.Fase.CodigoYDescripcion)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Operacion)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Operacion.CodigoYDescripcion)
        </dd class>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Maquina)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Maquina.CodigoYDescripcion)
        </dd class>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TiempoPreparacion)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TiempoPreparacion)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TiempoProduccion)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TiempoProduccion)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.MermasTeoricas)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MermasTeoricas)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Borrar" class="btn btn-danger" /> |
        <a href="/EstructuraFases/Details/@Model.EstructuraFaseId">Volver</a>
    </form>
</div>
