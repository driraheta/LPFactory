@model LPFactory.Data.EstructuraFase

@{
    ViewData["Title"] = "Editar";
}

<h4>Editar fase de la estructura</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="EstructuraId" value="@ViewBag.EstructuraId" />
            <div class="form-group">
                <label asp-for="FaseId" class="control-label"></label>
                <select asp-for="FaseId" class="form-control" asp-items="ViewBag.FaseId"></select>
                <span asp-validation-for="FaseId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a href="/EstructuraFases/Index/@ViewBag.EstructuraId">Volver</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
