@model LPFactory.Data.EstructuraFase

@{
    ViewData["Title"] = "Crear fase";
}

<h4>Crear fase</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="EstructuraId" value="@ViewBag.EstructuraId" />
            <div class="form-group">
                <label asp-for="FaseId" class="control-label"></label>
                <select asp-for="FaseId" class ="form-control" asp-items="ViewBag.FaseId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a href="/EstructuraFases/Index/@ViewBag.EstructuraId">Volver</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
