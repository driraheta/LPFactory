@model LPFactory.Data.Estructura

@{
    ViewData["Title"] = "Lanzamiento de órdenes";
}

<h1>Lanzamiento de órdenes</h1>

<br />

<div class="card">
    <div class="card-body">
        <div class="col-md-12">
            <form asp-action="Resumen">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Articulo" class="control-label"></label>
                    <select asp-for="Id" class="form-control selectpicker" data-live-search="true" asp-items="ViewBag.Id"></select>
                </div>
                <div class="form-group">
                    <label asp-for="Cantidad" class="control-label"></label>
                    <input asp-for="Cantidad" class="form-control" />
                    <span asp-validation-for="Cantidad" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Previsualizar" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>


</div>


